@model IEnumerable<ExamApp.Core.Models.Question>
@{
    ViewData["Title"] = "Admin Paneli";
}

<div class="container-fluid">
    <h2>Admin Paneli</h2>

    <div class="row mb-4">
        <div class="col-md-3">
            <div class="card text-white bg-primary">
                <div class="card-body">
                    <h5 class="card-title">Toplam Soru</h5>
                    <h3>@ViewBag.TotalQuestions</h3>
                </div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="card text-white bg-success">
                <div class="card-body">
                    <h5 class="card-title">Toplam Kullanıcı</h5>
                    <h3>@ViewBag.TotalUsers</h3>
                </div>
            </div>
        </div>
    </div>

    <div class="d-flex justify-content-between mb-3">
        <h4>Sorular</h4>
        <a href="@Url.Action("AddQuestion")" class="btn btn-success">Yeni Soru Ekle</a>
    </div>

    <div class="table-responsive">
        <table class="table table-striped">
            <thead>
                <tr>
                    <th>ID</th>
                    <th>Soru</th>
                    <th>Doğru Cevap</th>
                    <th>Puan</th>
                    <th>İşlemler</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var question in Model)
                {
                    <tr>
                        <td>@question.Id</td>
                        <td>@(question.Text.Length > 50 ? question.Text.Substring(0, 50) + "..." : question.Text)</td>
                        <td>
                            <small>
                                @if (question.CorrectAnswer == question.OptionA)
                                {
                                    <text>A) @question.OptionA</text>
                                }
                                else if (question.CorrectAnswer == question.OptionB)
                                {
                                    <text>B) @question.OptionB</text>
                                }
                                else if (question.CorrectAnswer == question.OptionC)
                                {
                                    <text>C) @question.OptionC</text>
                                }
                                else if (question.CorrectAnswer == question.OptionD)
                                {
                                    <text>D) @question.OptionD</text>
                                }
                                else
                                {
                                    <text>@question.CorrectAnswer</text>
                                }
                            </small>
                        </td>
                        <td>@question.Points</td>
                        <td>
                            <a href="@Url.Action("EditQuestion", new { id = question.Id })" class="btn btn-sm btn-warning">Düzenle</a>
                            <a href="@Url.Action("DeleteQuestion", new { id = question.Id })" class="btn btn-sm btn-danger"
                               onclick="return confirm('Bu soruyu silmek istediğinizden emin misiniz?')">Sil</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>

    <div class="mt-3">
        <a href="@Url.Action("Users")" class="btn btn-info">Kullanıcıları Yönet</a>
        <a href="@Url.Action("Logout")" class="btn btn-secondary">Çıkış</a>
    </div>
</div>